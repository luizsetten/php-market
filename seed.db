SELECT Produto.Nome, Produto.PreçoVenda, Possui.Quantidade, Compra.PreçoTotal
FROM Compra, Produto, Possui
WHERE  Possui.NrNotaFiscal = 1 AND Possui.NrNotaFiscal = Compra.NrNotaFiscal AND Possui.IDProduto = Produto.ID;

SELECT *
FROM Funcionário AS F
JOIN Usuário AS U ON F.CPF = U.CPFFuncionário;

SELECT Fornecedor.Contato, Fornecedor.NomeFantasia, Produto.Nome, Produto.Quantidade
FROM Fornecedor, Produto
WHERE Produto.Quantidade<10 AND Fornecedor.CNPJ = Produto.CNPJFornecedor;

SELECT Funcionário.Nome, Funcionário.CPF, Funcionário.CondiçõesDeSaúde
